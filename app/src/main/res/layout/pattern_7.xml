<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="right"
    android:orientation="vertical"
    android:paddingBottom="@dimen/bottomfromend"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="30dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


        <ImageView
            android:id="@+id/iv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="#ec407a"
            android:scaleType="centerCrop"
            tools:layout_height="300dp"
            android:src="@drawable/a07"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bottomfromend"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/line"
                android:gravity="right"
                android:text="青春的时光很短\n我们也过得匆忙\n我们不能让时光的飞逝慢一些\n只能用镜头留下曾经年轻的面孔\n用镜头记录自己每一个美好的瞬间\n留作纪念"
                android:textSize="12sp" />

            <View
                android:id="@+id/line"
                android:layout_width="1dp"
                android:layout_height="2dp"
                android:layout_alignBottom="@id/tv1"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/tv1"
                android:background="#000000" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:maxEms="1"
                android:maxLines="4"
                android:text="毕业快乐"
                android:textSize="20sp" />
        </RelativeLayout>


    </LinearLayout>
